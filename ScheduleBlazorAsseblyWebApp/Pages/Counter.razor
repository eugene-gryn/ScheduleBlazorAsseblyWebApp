@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<div class="d-flex flex-row">
    <button class="mx-1 btn btn-primary" @onclick="IncrementCount">Add one</button>
    <button class="mx-1 btn btn-primary" @onclick="DecreaseMinusFive">Minus five</button>
</div>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void DecreaseMinusFive()
    {
        currentCount -= 5;
    }
}
